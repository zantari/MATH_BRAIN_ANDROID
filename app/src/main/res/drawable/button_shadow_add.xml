<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Stan kliknięty -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Shadow praktycznie niewidoczny -->
            <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="1dp">
                <shape android:shape="oval">
                    <solid android:color="#B4E41D" />
                </shape>
            </item>

            <!-- Górna warstwa wciśnięta całkowicie -->
            <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
                <shape android:shape="oval">
                    <solid android:color="#B4E41D" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Stan normalny -->
    <item>
        <layer-list>
            <!-- Shadow -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#22B045" />
                </shape>
            </item>

            <!-- Górna warstwa -->
            <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="10dp">
                <shape android:shape="oval">
                    <solid android:color="#B4E41D" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
