<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2595BD"

    android:orientation="vertical"
    tools:context=".AdventureActivity">

    <!-- NOWY LinearLayout dodany nad przyciskiem -->
    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="#B4E41D"
        android:orientation="horizontal"

        android:padding="10dp">

        <ImageButton
            android:id="@+id/goBack"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="#B4E41D"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/redarrow" />


        <View
            android:layout_width="2dp"
            android:layout_height="60dp"
            android:background="#eb3734" />

        <TextView
            android:id="@+id/chapterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="ADDITION"

            android:textColor="#22B045"
            android:textSize="45dp" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollableContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/innerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="100dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:layout_marginLeft="120dp"
                android:backgroundTint="#B4E41D"
                android:paddingLeft="20dp"
                android:text="10"
                android:textColor="#22B045"
                android:textSize="49dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:backgroundTint="#B4E41D"
                android:text="9"
                android:textColor="#22B045"
                android:textSize="60dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:layout_marginRight="120dp"
                android:backgroundTint="#B4E41D"
                android:text="8"
                android:textColor="#22B045"
                android:textSize="60dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:backgroundTint="#B4E41D"
                android:text="7"
                android:textColor="#22B045"
                android:textSize="60dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:layout_marginLeft="120dp"
                android:backgroundTint="#B4E41D"
                android:paddingLeft="20dp"
                android:text="6"
                android:textColor="#22B045"
                android:textSize="60dp" />


            <Button
                android:layout_width="100dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:backgroundTint="#B4E41D"
                android:text="5"
                android:layout_marginTop="10dp"
                android:textColor="#22B045"
                android:textSize="60dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:layout_marginRight="120dp"
                android:backgroundTint="#B4E41D"
                android:text="4"
                android:layout_marginTop="10dp"
                android:textColor="#22B045"
                android:textSize="60dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:backgroundTint="#B4E41D"
                android:text="3"
                android:layout_marginTop="10dp"
                android:textColor="#22B045"
                android:textSize="60dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:layout_marginLeft="120dp"
                android:backgroundTint="#B4E41D"
                android:paddingLeft="10dp"
                android:text="2"
                android:layout_marginTop="20dp"
                android:textColor="#22B045"
                android:textSize="60dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="#B4E41D"
                android:text="1"
                android:textColor="#22B045"
                android:textSize="60dp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/startline"
                />



        </LinearLayout>

    </ScrollView>



</LinearLayout>



