<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2596be"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".LevelActivity">
    <ImageButton
        android:id="@+id/button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="right"
        android:background="@drawable/button_circle_background"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/settings"
        android:layout_margin="10dp"
        app:tint="#1a3d59"
        android:elevation="10dp" />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:srcCompat="@drawable/mathbrainlogo" />

    <TextView
        android:id="@+id/excText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:text="8+8 = ?"
        android:textColor="#1a3d59"
        android:textSize="75sp"
        android:textStyle="bold" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/answer1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#99c1f1"
            android:text="16"
            android:textColor="#1a3d59"
            app:autoSizeTextType="uniform"
            android:maxLines="1"
            app:cornerRadius="22dp"
            android:elevation="20dp"
            android:stateListAnimator="@null" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/answer2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#99c1f1"
            android:text="13"
            android:textColor="#1a3d59"
            app:autoSizeTextType="uniform"
            android:maxLines="1"
            app:cornerRadius="22dp"
            android:elevation="20dp"
            android:stateListAnimator="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/answer3"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="#99c1f1"
            android:text="21"
            android:textColor="#1a3d59"
            app:autoSizeTextType="uniform"
            android:maxLines="1"
            app:cornerRadius="22dp"
            android:elevation="20dp"
            android:stateListAnimator="@null" />



    </LinearLayout>

    <SeekBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="4"
        android:layout_marginTop="40dp"

        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"  android:progressTint="#928CDB77"
        android:thumb="@android:drawable/btn_star_big_on"
        android:tickMark="@android:drawable/btn_star_big_off" />

</LinearLayout>