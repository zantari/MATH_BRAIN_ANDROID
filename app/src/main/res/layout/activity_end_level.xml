<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2596be"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="40dp"
        android:id="@+id/brainImg"
        android:src="@drawable/happybrain2"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textUnderBrain"
        android:src="@drawable/levelcleard"
        />



    <ImageView
        android:id="@+id/star1"
        android:layout_width="400dp"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/stars3"
        android:layout_gravity="center"/>


    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="10sp"
        android:layout_gravity="center"
        android:fontFamily="@font/baloo"
        android:text="Score: 100%"

        />
<!--    textsize w textview wyzej bylo 60sp zmienilem dla testow-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/homeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="return"/>

        <Button
            android:id="@+id/tryAgainBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="retry"/>

        <Button
            android:id="@+id/nextLevelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nextLvl"/>

    </LinearLayout>







</LinearLayout>